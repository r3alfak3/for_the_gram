<!DOCTYPE html>
<html>
  <head>
    <title>ForTheGram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Passion+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab&display=swap" rel="stylesheet">

  <body>
  <%= render partial: "/layouts/header" %>
  <% unless current_page?(root_path) %>
      <%= render partial: "/layouts/alerts" %>
  <% end %>
  <div class="container col-sm-8 offset-sm-2 col-md-10 offset-md-1 col-12 offste-12">
    <%= yield %>
  </div>
    <!-- Sign In Modal -->
    <div class="modal fade bs" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Welcom Back!</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>

            <%= render "devise/shared/links" %>        
          </div>
          <div class="modal-footer">
              <div class="form-actions">
                <%= f.button :submit, "Start Posting", class: 'btn btn-primary' %>
              </div>
            <% end %>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    <%= render partial: "/layouts/footer" %>
  </body>
</html>
